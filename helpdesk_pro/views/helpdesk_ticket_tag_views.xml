<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_ticket_tag_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.search</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <search string="Ticket Tag Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator />
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
            </search>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tag_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tag_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <tree string="Ticket Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- View Form helpdesk.ticket.module -->
    <record model="ir.ui.view" id="helpdesk_ticket_module_form">
        <field name="name">helpdesk.ticket.module.form</field>
        <field name="model">helpdesk.ticket.module</field>
        <field name="arch" type="xml">
            <form string="Ticket module">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_ids" widget="many2many_tags" domain="[('is_company', '=', True)]" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View Tree helpdesk.ticket.module -->
    <record model="ir.ui.view" id="helpdesk_ticket_module_tree">
        <field name="name">helpdesk.ticket.module.tree</field>
        <field name="model">helpdesk.ticket.module</field>
        <field name="arch" type="xml">
            <tree string="Ticket module" editable="top">
                <field name="name"/>
                <field name="company_id"/>
                <field name="partner_ids" widget="many2many_tags" domain="[('is_company', '=', True)]" options="{'no_create': True}"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

</odoo>
