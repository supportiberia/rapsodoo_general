    <!-- View Form project.project -->
    <record id="project_project_inherit_ticket_pro_form" model="ir.ui.view">
        <field name="name">project.project.inherit.ticket.pro.form</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="count_hours" required="True"/>
                <field name="diff_hours"/>
            </xpath>
        </field>
    </record>

    <!-- View Form cross.ticket -->
    <record id="cross_ticket_form" model="ir.ui.view">
        <field name="name">cross.ticket.form</field>
        <field name="model">cross.ticket</field>
        <field name="arch" type="xml">
            <form string="Cross ticket">
                <sheet>
                    <group>
                        <group>
                            <field name="type_urgency"/>
                            <field name="type_impact"/>
                        </group>
                        <group>
                            <field name="cross_impact"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View Tree cross.ticket -->
    <record id="cross_ticket_tree" model="ir.ui.view">
        <field name="name">cross.ticket.tree</field>
        <field name="model">cross.ticket</field>
        <field name="arch" type="xml">
            <tree string="Cross ticket">
                <field name="type_urgency"/>
                <field name="type_impact"/>
                <field name="cross_impact"/>
            </tree>
        </field>
    </record>

    <record id="action_cross_ticket" model="ir.actions.act_window">
        <field name="name">Cross ticket</field>
        <field name="res_model">cross.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('cross_ticket_tree')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('cross_ticket_form')})]"/>
    </record>
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_reporting_action" model="ir.actions.act_window">
        <field name="name">Reporting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">pivot,graph</field>
    </record>
    <record id="helpdesk_ticket_channel_action" model="ir.actions.act_window">
        <field name="name">Channels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.channel</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_category_action" model="ir.actions.act_window">
        <field name="name">Ticket type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_team_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.team</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Ticket Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_module_action" model="ir.actions.act_window">
        <field name="name">Ticket module</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.module</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- View Form detail.days -->
    <record id="detail_days_form" model="ir.ui.view">
        <field name="name">detail.days.form</field>
        <field name="model">detail.days</field>
        <field name="arch" type="xml">
            <form>
                <field name="report_lines" readonly="True">
                    <tree>
                        <field name="name" string="Ref."/>
                        <field name="entry_date"/>
                        <field name="end_date"/>
                        <field name="user_id"/>
                        <field name="count_day" sum="Total"/>
                        <field name="ticket_id" invisible="1"/>
                    </tree>
                </field>
                <footer>
                   <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="detail_days_wizard_action" model="ir.actions.act_window">
        <field name="name">See details of days waiting for customer response</field>
        <field name="res_model">detail.days</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id='support_menu_principal' name='Helpdesk' web_icon="helpdesk_pro,static/description/icon.png" groups="group_helpdesk_user_own">
<!--        <menuitem name="Dashboard" id="support_menu_item_dashboard" action="helpdesk_dashboard_action" sequence="1"/>-->
        <menuitem name="Tickets" id="support_menu_item_ticket" sequence="2">
            <menuitem name="Tickets" id="support_menu_item_ticket1" action="helpdesk_ticket_action" sequence="1"/>
        </menuitem>
        <menuitem name="Reporting" id="support_menu_item_report" sequence="3">
            <menuitem name="Tickets" id="support_menu_item_report1" action="helpdesk_ticket_reporting_action" sequence="1"/>
        </menuitem>
        <menuitem name="Configuration" id="support_menu_item_setting" sequence="999" groups="group_helpdesk_manager">
            <menuitem name="Channels" id="support_menu_item_setting1" action="helpdesk_ticket_channel_action" sequence="1"/>
            <menuitem name="Ticket type" id="support_menu_item_setting2" action="helpdesk_ticket_category_action" sequence="2"/>
            <menuitem name="Stages" id="support_menu_item_setting3" action="helpdesk_ticket_stage_action" sequence="3"/>
            <menuitem name="Teams" id="support_menu_item_setting4" action="helpdesk_ticket_team_action" sequence="4"/>
            <menuitem name="Ticket Tags" id="support_menu_item_setting5" action="helpdesk_ticket_tag_action" sequence="5"/>
            <menuitem name="Ticket modules" id="support_menu_item_setting6" action="helpdesk_ticket_module_action" sequence="6"/>
            <menuitem name='Cross ticket' id="support_menu_item_setting7" action="action_cross_ticket" sequence="999"/>
        </menuitem>
    </menuitem>
